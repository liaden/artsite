

<div class="container">
    <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Vacancies</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.name, lesson %></td>
        <td><%= lesson.date %></td>
        <td><%= lesson.free_spots %></td>
        <td><%= lesson.description %></td>
      </tr>
    <% end %>
    </tbody>
    </table>

    <p>Private lessons are available upon request for all ages.</p>
</div>


