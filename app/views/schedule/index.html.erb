<table class="table table-striped table-bordered table-condensed">
<thead>
    <tr>
    <th>Date</th>
    <th>Name</th>
    <th>Type</th>
    <th>Building</th>
    <th>Address</th>
</thead>
<tbody>
<% @shows.each do |show| -%>
    <tr>
    <td><%= show.date -%></td>
    <td><%= link_to show.name, show -%></td>
    <td><%= show.show_type -%></td>
    <td><%= show.building -%></td>
    <td><%= show.address -%></td>
<% end -%>
</tbody>
</table>
