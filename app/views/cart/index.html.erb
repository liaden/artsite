<div class="container">

<% @framing_select_disabled = false -%>

<%= form_tag checkout_path, :method => :post, :class => "form-inline" do -%>

<%= render 'print_list' -%>
<%= render 'lesson_list' -%>

<% if not @order.empty_cart? -%> 
<table class="table table-condensed">
<thead>
    <tr><th>&nbsp;</th><th class="amount-column">Amount</th></tr>
</thead>
<tbody>
    <tr><td>Shipping:</td><td class="amount-column"><%= @shipping -%></td></tr>
    <tr><td>Total: </td><td class="amount-column"><%= @order.total + @shipping -%></td></tr>
</tbody>
</table>
<% end -%>
 
<p>Note: all orders $50 or more receive free shipping.</p>

<%= submit_tag "#{"Guest " if not @user }Checkout" if @order.lessons.size > 0 or @order.prints.size > 0 -%>

<!-- <%= link_to('checkout', checkout_path) if @order.lessons.size > 0 or @order.prints.size > 0 -%> -->
<% end -%>
</div>
