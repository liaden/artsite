<% if @order.lessons.size > 0 -%>
    <h1>Classes:</h1>
    <table class="table table-condensed">
    <thead>
        <tr><th>Name</th><th>Remove</th></tr>
    </thead>
    <tbody>
    <% @order.lessons.each do |lesson| -%>
       <tr><td><%= link_to 'x', remove_path(lesson) -%> </td><td><%= lesson.name -%></td><td></td></tr> 
    <% end -%>
    </tbody>
    </table>

<% end -%>

