<div class="container">
    <div class="row-fluid">
    <div class="span8">
        <% if @media -%>
            <div class="page-header">
                <h1>Gallery <small><%= @media.name -%></small></h1>
            </div>
        <% elsif @tag -%>
            <div class="page-header">
                <h1>Gallery <small><%= @tag.name -%></small></h1>
            </div>
        <% else -%>
            <div class="page-header">
                <h1>Gallery</h1>
            </div>
        <% end -%>
        <ul class="thumbnails">
            <li class="span5">
                <%= link_to image_tag(@artworks[0].image.url(:carousel)), @artworks[0], :class => 'thumbnail' -%>
            </li>
            <% @artworks[1..-1].each do |artwork| -%>
                <%= render :partial => 'partials/artwork_thumbnail', :locals => { :artwork => artwork } -%>
            <% end -%>
        </ul>
    </div>
    <div class="span4">
        <div class="well">
            <h3 class="black">Mediums</h3>
            <%= render :partial => 'partials/mediums', :locals => {:medium => Medium.all} -%>
        </div>
        <div class="well">
            <h3 class="black">Tags</h3>
            <%= render :partial => 'partials/tags', :locals => {:tags => Tag.all} -%>
        </div>
    </div>
    </div>
</div>
