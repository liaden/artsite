<%= content_for :javascript do 
  javascript_include_tag "artwork" 
end -%>

<%= content_for :og do -%>
    <%= tag :meta, :property => "og:title", :content => artwork.title %>
    <%= tag :meta, :property => "og:type", :content => :article %>
    <%= tag :meta, :property => "og:url", :content => "http://www.archaicsmiles.com#{url_for(artwork)}" %>
    <%= tag :meta, :property => "og:image", :content => artwork.image.url(:thumbnail) %>
    <%= tag :meta, :property => "og:site_name", :content => "ArchaicSmiles" %>
    <%= tag :meta, :property => "og:description", :content => artwork.description %>
<% end -%>

<div class="header">
  <div class='row'>
    <h1 class="left"><%= best_in_place_if artwork.editable?, artwork, :title -%> <%= artwork.edit_link_if_admin -%></h1>
    <h3 class="subheader right">
      <%= best_in_place_if artwork.editable?, artwork, :created, :type => :date -%>
    </h3>
    </div>
  </div>
  <hr></hr>
<div>

<div class="row">
  <div class="small-12 columns center">
  <%= image_tag artwork.image.url, :id => 'artwork-image', :class => 'th' -%>
  </div>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <h3>Description</h3>
    <div style="padding-left:1em;">
      <blockquote><%= best_in_place_if artwork.editable?, artwork, :description, :type => :textarea, :ok_button => 'Save changes', :cancel_button => 'Cancel' -%></blockquote>
    </div>
  </div> 
</div>
<div class="row">
  <%= artwork.facebook_like -%>
</div>
