<%= form_for @artwork, :html => {:class => "form-horizontal"} do |f| -%>
    <fieldset>
    <div class="control-group">
        <%= f.label :title, :class => "control-label" -%>
        <div class="controls"><%= f.text_field :title, :class => "span5" -%></div>
    </div>

    <div class="control-group">
        <%= f.label :description, :class => "control-label" -%>
        <div class="controls"><%= f.text_area :description, :rows => 5, :class => "span5" -%></div>
    </div>

    <div class="control-group">
        <%= f.label :image, :class => "control-label" -%>
        <div class="controls"><%= f.file_field :image -%></div>
    </div>

    <div class="control-group">
        <%= f.label :tags, :class => "control-label" -%>
        <div class="controls"><%= text_field_tag :tags, @tags -%></div>
    </div>

    <div class="control-group">
        <%= f.label :mediums, :class => "control-label" -%>
        <div class="controls"><%= text_field_tag :mediums, @medium -%></div>
    </div>

    <div class="control-group">
        <%= label_tag :original_size, "Size of Original", :class => "control-label" -%>
        <div class="controls">
            <%= text_field_tag :original_size, "", :class => "span2" -%>
            <p class="help-inline">This creates prints of the correct size from the ratio.</p>
        </div>
    </div>

    <div class="control-group">
        <%= label_tag :is_sold_out, "NFS?", :class => "control-label" -%>
        <div class="controls">
            <%= check_box_tag :is_sold_out, "yes", false -%>
        </div>
    </div>

    <div class="control-group">
        <%= label_tag :original_size, "Price of Original", :class => "control-label" -%>
        <div class="controls">
            <%= text_field_tag :original_price, "", :class => "span2" -%>
            <p class="help-inline">Price in dollars.</p>
        </div>
    </div>

    <div class="control-group">
        <%= label_tag :large, "Enable Sizes", :class => "control-label" -%>
        <div class="controls">
            <label class="checkbox">
                <%= check_box_tag :enable_s, "yes", true -%>
                Small
            </label>
        </div>

        <div class="controls">
            <label class="checkbox">
                <%= check_box_tag :enable_m, "yes", true -%>
                Medium
            </label>
        </div>

        <div class="controls">
            <label class="checkbox">
                <%= check_box_tag :enable_l, "yes", true -%>
                Large
            </label>
        </div>

        <div class="controls">
            <label class="checkbox">
                <%= check_box_tag :enable_xl -%>
                Extra Large (16x20 or 20x30 depending upon ratio)
            </label>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit "Create", :class => "btn btn-primary" -%>
    </div>
    </fieldset>
<% end -%>
