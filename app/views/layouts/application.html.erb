<!DOCTYPE html>
<html>
<head>
  <title>ArchaicSmiles</title>
  <%= yield :css  -%>
  <%= stylesheet_link_tag  "bootstrap-wrapper", :media => "all" %>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <% if controller.checking_out? -%>
      <%= javascript_include_tag("https://js.stripe.com/v1/") %>
  <% end %>
  <%= javascript_include_tag("application") %>
  <%= yield :javascript -%>
  <%= csrf_meta_tags -%>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
</head>
<body>

<%= render :partial => "partials/navbar", :locals => { :caller => controller.caller } -%>

<div class="container" style="margin-top:5em">
<% if flash[:error] -%>
<div class="alert alert-error"><%= h flash[:error] -%></div>
<% end -%>

<% if flash[:config_error] -%>
<div class="alert alert-error"><%= h flash[:error] -%></div>
<% end -%>

<% if flash[:notice] -%>
<div class="alert alert-info"><%= h flash[:notice] -%></div>
</div>
<% end -%>
</div>

<%= yield -%>
<%= render :partial => "partials/footer" -%>

</div>

</body>
</html>
